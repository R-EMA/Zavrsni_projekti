	public static<T> void swap(T x, T y) {
		T tmp;
		tmp = x;
		x = y;
		y = tmp;
	}
	
	public static<T> void show_arr(T[] arr) {
		for(T e : arr) {
			System.out.print(e + " ");
		}
		System.out.println("");
	}
}
